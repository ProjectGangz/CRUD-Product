@model List<WebEcommerceClothing.Models.ProductModel>

@{
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

<style>
    .custom-thead {
        background-color: #343a40;
        color: white;
    }
</style>

<div class="m-4">
    <h1>Products</h1>

    <table class="table table-striped table-bordered">
        <thead class="custom-thead">
            <tr>
                <th class="text-white">Product ID</th>
                <th class="text-white">Category</th>
                <th class="text-white">Product Name</th>
                <th class="text-white">Product Description</th>
                <th class="text-white">Price</th>
                <th class="text-white">Size</th>
                <th class="text-white">Color</th>
                <th class="text-white">Quantity</th>
                <th class="text-white">Image</th>
                <th class="text-white"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.Category.CategoryName</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductDescription</td>
                    <td>@String.Format("${0:0.00}", product.Price)</td>
                    <td>@product.Size</td>
                    <td>@product.Color</td>
                    <td>@product.Quantity</td>
                    <td>
                        <img src="~/uploads/@product.ProductImage" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@product.ProductID">Details</a>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@product.ProductID">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.ProductID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-success" asp-action="Create">Create New Product</a>
</div>
