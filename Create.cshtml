@model WebEcommerceClothing.Models.ProductModel
@using WebEcommerceClothing.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

<div class="m-4 p-5 my-custom-class">
    <div class="custom-out-form">
        <h1 class="text-center text-light">Create New Product</h1>
        <hr>
        <div class="custom-form-container">
            <form class="custom-form" asp-action="Create" asp-controller="Products" method="post" enctype="multipart/form-data">
                <div class="custom-form-group">
                    <label asp-for="CategoryID" class="form-label">Category</label>
                    <select asp-for="CategoryID" class="form-control">
                        <option value="">Select a category</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.CategoryID">@category.CategoryName</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>

                <div class="custom-form-group">
                    <label asp-for="ProductName" class="form-label">Product Name</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="custom-form-group">
                    <label asp-for="ProductDescription" class="form-label">Product Description</label>
                    <input asp-for="ProductDescription" class="form-control" />
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>
                <div class="custom-form-group">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="custom-form-group">
                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label"></label>
                        <input asp-for="ImageFile" class="form-control" type="file" />
                    </div>
                <div class="custom-form-group">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="custom-form-group">
                    <label asp-for="Size" class="form-label">Size</label>
                    <input asp-for="Size" class="form-control" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
                <div class="custom-form-group">
                    <label asp-for="Color" class="form-label">Color</label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="custom-form-group-button text-center">
                    <button type="submit" class="custom-form-submit-btn" value="Create">Create</button>
                    <a asp-action="Index" class="custom-form-submit-btn">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
