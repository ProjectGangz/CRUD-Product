@model WebEcommerceClothing.Models.ProductModel
@{
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
    ViewData["Title"] = "ProductDetails";
}
<div class="m-4 p-5 my-custom-class">
    <div class="custom-out-form">
        <h1 class="text-center text-light">Details</h1>
        <hr>
        <div class="custom-form-container">
            <table class="table">
                <thead>
                    <tr class="text-info">
                        <td>Product ID</td>
                        <td>Product Name</td>
                        <td>Product Description</td>
                        <td>Product Image</td>
                        <td>Size</td>
                        <td>Color</td>
                    </tr>
                </thead>
                <tbody>
                    <tr class="text-info">
                        <td>@Model.ProductID</td>
                        <td>@Model.ProductName</td>
                        <td>@Model.ProductDescription</td>
                        <td>@Model.ProductImage</td>
                        <td>@Model.Size</td>
                        <td>@Model.Color</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <img src="~/uploads/@Model.ProductImage" alt="Product Image" style="width: 300px; height: 400px;" />
            </div>
            <p>
                <a class="btn btn-success" asp-action="Index">Back to List</a>
            </p>
        </div>
    </div>
</div>